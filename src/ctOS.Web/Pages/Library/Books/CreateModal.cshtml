@page
@using ctOS.Localization
@using ctOS.Web.Pages.Library.Books
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model ctOS.Web.Pages.Library.Books.CreateModalModel
@inject IStringLocalizer<ctOSResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Book" asp-page="/Library/Books/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>